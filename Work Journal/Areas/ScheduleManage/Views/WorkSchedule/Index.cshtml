@using Newtonsoft.Json
@using Work_Journal.Areas.ScheduleManage.Controllers;

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<div class="container">
    <h1>工作日誌</h1>
    <!-- 搜尋框 -->
    <input type="text" id="searchInput" placeholder="輸入關鍵字搜尋...">

    <!-- 列表 -->
    <table>
        <thead>
            <tr>
                <th>工作日期</th>
                <th>標題</th>
                <th>動作</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>

@Html.AntiForgeryToken();

@section Scripts {
    <script>
        var app = Vue.createApp({
            data() {
                return {
                    pageList: {},
                    Keyword: '',
                }
            },
            created: function () {
                this.Init();
            },
            methods: {
                Init() {
                    ShowBlock();
                    var model = {
                        Currentpage = this.pageList.Currentpage,
                        PageSize = this.pageList.PageSize,
                        Keyword = this.Keyword,
                        __RequestVerificationToken = $('input[name="__RequestVerificationToken"]').val(),
                    };

                    $.ajax({
                        url: '@Url.Action(nameof(WorkScheduleController.SwitchPage))',
                        type: 'POST',
                        data: model,
                        success: function (response) {
                            app.pageList = response;
                            CloseBlock();
                        }
                    })
                }
            },
        });
    </script>
}